        <label for="pizza">피자</label>
        <input type="checkbox" id="chicken" value="chicken" name="favoritefood" />
        <label for="chicken">치킨</label>
    </fieldset>
    <fieldset>
        <legend>기타</legend>
        <label for ="color">좋아하는 색깔</label>
        <input type = "color" name="color">
    </br>
        <label for ="number">좋아하는 숫자</label> 
        <input type = "number" name="number">
    </fieldset>
</br>
    <button type="submit">회원가입</button>
    
    </form>
