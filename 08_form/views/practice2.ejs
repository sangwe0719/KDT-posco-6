<body>
    <h2>실습 2 문제입니다.</h2>
    <form action="/postform" name = 'login2' method ='post' class="post-form">
        <label for="name">이름: </label><input type="text" id="name" name="name"/>
    <fieldset>
        <legend>성별</legend>
        <input type="radio" name="gender" id="man" value="man" />
        <label for="teacher">남자</label>
        <input type="radio" name="gender" id="woman" value="woman" />
        <label for="student">여자</label>
    </fieldset>
    <fieldset>
        <legend>생년월일</legend>
        <select name="birthyear" id="year">
            <% for(var i=1950; i<2023; i++){ %>
                <option value="<%= i  %>">
                    <%= i %>
                </option>
            <% } %>
        </select>
        <label for ="year">년</label>
        <select name="birthmonth" id="month">
            <% for(var i=1; i<13; i++){ %>
                <option value="<%= i  %>">
                    <%= i %>
                </option>
            <% } %>
        </select>
        <label for ="month">월</label>
        <select name="birthday" id="day">
            <% for(var i=1; i<32; i++){ %>
                <option value="<%= i  %>">
                    <%= i %>
                </option>
            <% } %>
        </select>
        <label for ="day">일</label>        
    </fieldset>
    <fieldset>
        <legend>좋아하는 음식</legend>
        <input type="checkbox" id="gimbap" value="gimbap" name="favoritefood" />
        <label for="gimbap">김밥</label>
        <input type="checkbox" id="pasta" value ="pasta"name="favoritefood" />
        <label for="pasta">파스타</label>
